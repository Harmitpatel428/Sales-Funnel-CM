{
  "name": "enterprise-lead-management-system",
  "version": "2.0.0",
  "description": "Professional Enterprise Lead Management & CRM System",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --no-lint",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "build:analyze": "ANALYZE=true next build",
    "clean": "rm -rf .next out dist",
    "clean:all": "rm -rf .next out dist node_modules tsconfig.tsbuildinfo auto-commit.log",
    "clean:build": "rm -rf .next out dist",
    "clean:deps": "rm -rf node_modules",
    "preview": "next build && next start",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build-electron": "next build --no-lint && electron-builder",
    "dist": "npm run build-electron",
    "auto-commit": "node auto-commit.js",
    "auto-commit:start": "start-auto-commit.bat",
    "dev:full": "start-development.bat",
    "dev:ps": "start-development.ps1",
    "status": "project-status.bat",
    "setup": "npm install && npm run auto-commit:start"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@types/file-saver": "^2.0.7",
    "docx": "^9.5.1",
    "express": "^4.21.2",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.23.12",
    "gsap": "^3.13.0",
    "html2canvas": "^1.4.1",
    "html2pdf.js": "^0.12.0",
    "jspdf": "^3.0.2",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "pdfmake": "^0.2.20",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "recharts": "^3.1.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/d3-path": "^3.1.1",
    "@types/debug": "^4.1.12",
    "@types/estree": "^1.0.8",
    "@types/json-schema": "^7.0.15",
    "@types/json5": "^0.0.30",
    "@types/ms": "^2.1.0",
    "@types/node": "^20.19.14",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/responselike": "^1.0.3",
    "@types/use-sync-external-store": "^1.5.0",
    "@types/yauzl": "^2.10.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^33.4.11",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "tailwindcss": "^4.1.13",
    "typescript": "^5",
    "wait-on": "^8.0.4"
  },
  "main": "electron/main.js",
  "homepage": "./",
  "build": {
    "appId": "com.enterpriseleadmgmt.app",
    "productName": "Enterprise Lead Management System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/favicon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/favicon.ico"
    }
  }
}
