{
  "commitInterval": 300000,
  "logFile": "auto-commit.log",
  "maxLogSize": 10485760,
  "excludePatterns": [
    "node_modules/**",
    ".next/**",
    "out/**",
    "dist/**",
    "*.log",
    ".git/**",
    "auto-commit.log",
    "*.exe",
    "*.exe.blockmap",
    "*.dmg",
    "*.AppImage",
    "*.deb",
    "*.rpm",
    "win-unpacked/**",
    "app-update.yml",
    "latest.yml"
  ],
  "commitMessageTemplate": "Auto-commit: {timestamp}",
  "enableDetailedLogging": true,
  "maxCommitsPerHour": 12,
  "backupLogFiles": true
}
